<!--components/goods-item/index.wxml-->
<view class="con" bindtap="goodsItemClick">
	<image src="{{item.show.img||item.img||item.image}}" ></image>
	<text class="tit">{{item.title}}</text>
	<view class="desc">
		<text class="price">{{item.orgPrice}}</text>
		<text class="num">{{item.itemType}}</text>
	</view>
</view>
