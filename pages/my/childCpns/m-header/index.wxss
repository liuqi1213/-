.header{
	display: flex;
	background-color: #ff5777;
	height: 170rpx;
	padding: 12rpx 30rpx;
	color: #fff;
	position: relative;
}
.userIcon image{
	width: 140rpx;
	height: 140rpx;
	border-radius: 70rpx;
	background-color: #f2f2f2;
	vertical-align: middle;
}
.login-info{
	vertical-align: middle;
	margin-left: 30rpx;
}
.login{
	font-size: 36rpx;
	margin-top: 18rpx;
}
.phone{
	font-size: 28prpx;
	margin-top: 10rpx;
}
.phone image{
	width: 36rpx;
	height: 36rpx;
	vertical-align: middle;
}
.arrow{
	position: absolute;
	right: 30rpx;
	margin-top: 30rpx;
}
.arrow image{
	width: 60rpx;
	height: 60rpx;
